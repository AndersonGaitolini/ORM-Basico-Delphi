unit udmPrin;

interface

uses
  System.SysUtils, System.Classes, Base, DaoIBX;

type
  TdmPrin = class(TDataModule)
    procedure DataModuleCreate(Sender: TObject);
    procedure DataModuleDestroy(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
    Conexao: TConexaoIbx;
    Dao: TDaoIBX;
    MyTrans: TTransIbx;
  end;

var
  dmPrin: TdmPrin;

implementation

{%CLASSGROUP 'System.Classes.TPersistent'}

{$R *.dfm}

procedure TdmPrin.DataModuleCreate(Sender: TObject);
begin
  // configuração da conexão - utilizando IBX
  Conexao := TConexaoIbx.Create;
  MyTrans := TTransIbx.Create(Conexao.Database);

  with Conexao do
  begin
    LocalBD := 'F:\Programas\ProgsXe\Persistencia\Bd\BANCOTESTE.FDB';
    Usuario := 'sysdba';
    Senha   := '02025626';
    Conecta;
//    MyTrans := Transaction;
  end;

  Dao := TDaoIBX.Create(Conexao, MyTrans);
end;

procedure TdmPrin.DataModuleDestroy(Sender: TObject);
begin
  MyTrans.Free;
  Conexao.Free;
  Dao.Free;
end;

end.
